using ClosedXML.Excel;
using System;

class Program
{
    static void Main(string[] args)
    {
        // Path to the Excel file
        var filePath = @"path\to\your\extracted_content.xlsx"; // Replace with the actual file path

        // Open the Excel file
        using (var workbook = new XLWorkbook(filePath))
        {
            // Get the first worksheet
            var worksheet = workbook.Worksheet(1);

            // Initialize counters
            int a = 0;
            int b = 0;
            int c = 0;

            // Assume that the status text is in the first column and starts from the second row
            for (int row = 2; row <= worksheet.LastRowUsed().RowNumber(); row++)
            {
                // Read the value of the first cell in the current row
                var cellValue = worksheet.Cell(row, 1).GetString();

                // Increment the appropriate counter based on the cell content
                if (cellValue == "a")
                {
                    a += (int)worksheet.Cell(row, 2).GetValue<int>();
                }
                else if (cellValue == "b")
                {
                    b += (int)worksheet.Cell(row, 2).GetValue<int>();
                }
                else if (cellValue == "c")
                {
                    c += (int)worksheet.Cell(row, 2).GetValue<int>();
                }
            }

            
        }
        }

        // Keep the console window open
        Console.ReadLine();
    }
}
